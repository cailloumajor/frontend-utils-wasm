{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchPackageNames": [
        "rust"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
