{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>Omochice/renovate-config:deno"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchSourceUrls": [
        "https://github.com/wasm-bindgen/wasm-bindgen"
      ],
      "groupName": "rust-wasm-bindgen monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    },
    {
      "matchPackageNames": [
        "rust"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["denoland/deno"],
      "versioning": "regex:^(?<compatibility>[a-z]+)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
